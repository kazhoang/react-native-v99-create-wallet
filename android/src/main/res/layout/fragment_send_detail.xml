<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical" >

  <ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:scaleType="centerCrop"
    android:src="@drawable/onboarding_bg_end"
    android:contentDescription="TODO" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contentDescription="background Image"
    android:gravity="bottom"
    android:layout_marginHorizontal="16dp"
    android:orientation="vertical">

    <com.google.android.material.button.MaterialButton
      android:id="@+id/btnCreateTest"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:backgroundTint="#FBAB00"
      android:minHeight="48dip"
      android:paddingTop="8dp"
      android:paddingBottom="8dp"
      android:textAllCaps="false"
      android:text="Create Wallet"
      app:cornerRadius="8dp" />

    <com.google.android.material.button.MaterialButton
      style="@style/Widget.MaterialComponents.Button.OutlinedButton"
      android:id="@+id/btnImportTest"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Import Existing Wallet"
      android:textColor="#FBAB00"
      app:backgroundTint="@android:color/transparent"
      android:textAllCaps="false"
      app:cornerRadius="8dp"
      app:strokeColor="#FBAB00"
      />

    <com.google.android.material.button.MaterialButton
      android:id="@+id/btnSkip"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/skip"
      android:textAllCaps="false"
      android:textColor="#BDBDBD"
      app:backgroundTint="@android:color/transparent"
      app:cornerRadius="8dp"
      app:strokeWidth="0dp" />
  </LinearLayout>

</FrameLayout>
